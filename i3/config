        separator  #606060
		#					border	back	text
        focused_workspace  #00FF7F #00FF7F #404040
        active_workspace   #000000 #5f676a #ffffff
        inactive_workspace #888888 #888888 #404040
        urgent_workspace   #FF0050 #FF0050 #ffffff
        binding_mode       #FF0050 #FF0050 #ffffff
    }

        status_command i3status
}
